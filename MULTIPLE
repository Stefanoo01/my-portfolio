// components/projects.tsx
import React from 'react';
import { Card, Button } from '@nextui-org/react';

export default function Projects() {
  const projects = [
    { slug: 'project1', title: 'Project 1' },
    { slug: 'project2', title: 'Project 2' },
    { slug: 'project3', title: 'Project 3' },
  ];

  return (
    <div className="container mx-auto max-w-6xl px-4 animate-in fade-in-20 duration-700">
      <h2 className="text-3xl font-bold mb-6">My Projects</h2>
      <div className="grid grid-cols-1 md:grid-cols-2 gap-6">
        {projects.map((p) => (
          <Card key={p.slug} className="group overflow-hidden border bg-card/60 backdrop-blur-sm transition-all duration-300 hover:shadow-lg hover:-translate-y-0.5">
            <div className="relative aspect-[16/10] overflow-hidden bg-[linear-gradient(to_bottom,transparent,rgba(0,0,0,0.02))]">
              <div className="absolute inset-0">
                <img src={`/${p.slug}.jpg`} alt={p.title} className="object-cover transition-transform duration-500 ease-out group-hover:scale-[1.03]" />
              </div>
            </div>
            <div className="p-4">
              <h3 className="text-xl font-bold mb-2">{p.title}</h3>
              <p className="text-sm text-muted-foreground">Description of the project.</p>
            </div>
            <div className="flex items-center justify-between border-t px-6 py-4">
              <Button asChild className="shadow-sm hover:shadow-md transition-shadow bg-gradient-to-r from-primary to-primary/80 text-primary-foreground">
                <a href={`/${p.slug}`}>View Project</a>
              </Button>
              <Button asChild variant="outline" className="hover:bg-accent/40 transition-colors bg-transparent">
                <a href={`/${p.slug}`}>Code</a>
              </Button>
            </div>
          </Card>
        ))}
      </div>
    </div>
  );
}

// components/experience.tsx
import React from 'react';

export default function Experience() {
  const experienceItems = [
    { year: '2020', title: 'Software Developer', company: 'Company A' },
    { year: '2021', title: 'Senior Developer', company: 'Company B' },
    { year: '2022', title: 'Team Lead', company: 'Company C' },
  ];

  return (
    <div className="container mx-auto max-w-6xl px-4 animate-in fade-in-20 duration-700">
      <h2 className="text-3xl font-bold mb-6">Experience</h2>
      <ol className="relative border-l pl-6 border-muted-foreground/20">
        {experienceItems.map((item) => (
          <li key={item.year} className="mb-6 ml-6">
            <div className="absolute -left-[7px] mt-1 h-3 w-3 rounded-full bg-primary shadow-[0_0_0_3px_hsl(var(--background))] motion-safe:animate-pulse" aria-hidden="true" />
            <h3 className="font-semibold text-lg mb-2">{item.title}</h3>
            <p className="text-muted-foreground mb-4">{item.company}</p>
            <p className="text-sm text-muted-foreground">{item.year}</p>
          </li>
        ))}
      </ol>
    </div>
  );
}

// components/skills.tsx
import React from 'react';
import { Card } from '@nextui-org/react';

export default function Skills() {
  const skillsCategories = [
    { name: 'Frontend', skills: ['React', 'Next.js', 'JavaScript'] },
    { name: 'Backend', skills: ['Node.js', 'Express', 'Python'] },
    { name: 'Database', skills: ['MongoDB', 'PostgreSQL', 'MySQL'] },
  ];

  return (
    <div className="container mx-auto max-w-6xl px-4 animate-in fade-in-20 duration-700">
      <h2 className="text-3xl font-bold mb-6">Skills</h2>
      <div className="grid grid-cols-1 md:grid-cols-3 gap-6">
        {skillsCategories.map((cat) => (
          <Card key={cat.name} className="h-full bg-card/60 backdrop-blur-sm border transition-all duration-300 hover:-translate-y-0.5 hover:shadow-md animate-in fade-in-10 slide-in-from-bottom-4">
            <div className="p-4">
              <h3 className="text-xl font-bold mb-2">{cat.name}</h3>
              <ul className="list-disc list-inside text-sm text-muted-foreground">
                {cat.skills.map((skill) => (
                  <li key={skill}>{skill}</li>
                ))}
              </ul>
            </div>
            <div className="rounded-md border bg-background p-2 ring-1 ring-primary/10">
              {/* Small icon */}
            </div>
          </Card>
        ))}
      </div>
    </div>
  );
}

