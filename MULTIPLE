// components/site-header.tsx
import React from 'react';
import { Button, Link } from '@nextui-org/react';

export default function SiteHeader() {
  return (
    <header className="sticky top-0 z-40 w-full border-b bg-background/70 backdrop-blur supports-[backdrop-filter]:bg-background/60">
      <div className="relative container mx-auto max-w-6xl px-4 h-16 flex items-center justify-between after:pointer-events-none after:absolute after:inset-x-0 after:-bottom-px after:h-px after:bg-gradient-to-r after:from-transparent after:via-primary/40 after:to-transparent">
        {/* Site logo and navigation links */}
        <nav className="flex items-center space-x-4">
          {['Home', 'About', 'Projects', 'Contact'].map((link) => (
            <Link key={link} href={`/${link.toLowerCase()}`} className="text-muted-foreground hover:text-foreground transition-colors underline-offset-4 hover:underline decoration-primary/40">
              {link}
            </Link>
          ))}
        </nav>
        {/* Mobile menu button */}
        <Button variant="outline" size="icon" className="transition-colors hover:bg-accent bg-transparent">
          Menu
        </Button>
      </div>
    </header>
  );
}

